generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  login String
  password String /// @encrypted

  avatar String?

  tokens Token[]
}

enum TokenType {
  access
  refresh
}

model Token {
  id Int @id @default(autoincrement())
  token String
  type TokenType
  expiresAt DateTime
  revokedAt DateTime?

  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
